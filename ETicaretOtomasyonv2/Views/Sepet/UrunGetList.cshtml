@using ETicaretOtomasyonv2.Models.Siniflar
@model List<Sepet>

<div class="card border-secondary mb-5">
    <div class="card-header bg-secondary border-0">
        <h4 class="font-weight-semi-bold m-0">Alış-veriş detayı</h4>
    </div>

    <div class="card-body">
        <div class="d-flex justify-content-between mb-3 pt-1">
            <h6 class="font-weight-medium">Toplam Fiyat</h6>
            <h6 class="font-weight-medium">@Model.Sum(item => item.Fiyat)</h6>
        </div>

        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Toplam Vergi</h6>
            <h6 class="font-weight-medium">@Model.Sum(item => item.Vergi)</h6> <!-- Eğer sabit bir vergi ise -->
        </div>
    </div>

    <div class="card-footer border-secondary bg-transparent">
        <div class="d-flex justify-content-between mt-2">
            <h5 class="font-weight-bold">Toplam : </h5>
            <h5 class="font-weight-bold">@Model.Sum(item => item.Fiyat )</h5>
        </div>
        <a class="btn btn-block btn-primary my-3 py-3" href="/Sepet/checkout">Checkout Sayfasına git</a>
    </div>
</div>

