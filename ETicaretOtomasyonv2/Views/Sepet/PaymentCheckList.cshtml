<div class="d-flex justify-content-between mb-3 pt-1">
    <h6 class="font-weight-medium mb-3">Fiyat</h6>
    <h6 class="font-weight-medium mb-3">@Model.Sum(item => item.Fiyat)</h6>
</div>
<div class="d-flex justify-content-between">
    <h6 class="font-weight-medium mb-3">Vergi</h6>
    <h6 class="font-weight-medium mb-3">$10</h6>
</div>

