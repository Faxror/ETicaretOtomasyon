@model List<ETicaretOtomasyonv2.Models.Siniflar.Sepet>

<h5 class="font-weight-medium mb-3">Ürünler</h5>
<div>
    @foreach (var x in Model)
    {
        <div class="d-flex justify-content-between mb-3">
            <p>@x.Urunler.UrunAd</p>
            <p>@x.Fiyat</p>
        </div>
    }
</div>


