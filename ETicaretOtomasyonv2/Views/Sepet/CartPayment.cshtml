
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">

    <title>Ödeme Yap</title>
    <link rel="stylesheet" href="https://devtest.pekova.com.tr/app/obs/accountservice/carshop.css">
</head>
<body>
    <div class="payment-form">
        <div class="card">
            <div class="card-image">
                <img src="https://devtest.pekova.com.tr/app/obs/accountservice/axes-bussines-detay2.png" alt="Kart Resmi">
                <div class="card-info">
                    <div class="card-number" id="display-card-number">KART NUMARASI</div>
                    <div class="card-holder" id="display-card-holder">AD SOYAD</div>
                    <div class="card-expiry" id="display-card-expiry">MM/YY</div>
                    <div class="card-cvv" id="display-card-cvv">CVV</div>
                </div>
            </div>
        </div>
        <form id="payment-form">
            <div class="form-group">
                <label for="card-number">Kart Numarası</label>
                <input type="text" id="card-number" placeholder="Kart Numarası" maxlength="16" required>
            </div>
            <div class="form-group">
                <label for="card-holder">Kart Sahibi</label>
                <input type="text" id="card-holder" placeholder="İsim Soyisim" required>
            </div>
            <div class="form-group">
                <label for="expiry-date">Son Kullanma Tarihi</label>
                <input type="text" id="expiry-date" placeholder="MM/YY" maxlength="5" required>
            </div>

            <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv-input" placeholder="CVV Giriniz" oninput="updateCVV(this.value)" maxlength="4">
            </div>
            <button onclick="checkPayment()">Odemeyi Tamamla</button>
        </form>

    </div>

    <script src="https://devtest.pekova.com.tr/app/obs/accountservice/script.js"></script>
</body>
</html>


