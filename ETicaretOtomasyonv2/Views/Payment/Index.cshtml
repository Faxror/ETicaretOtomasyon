@using ETicaretOtomasyonv2.Models.Siniflar
@model List<Sales>
@{
    Layout = null;
}

<h2>Satış Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
<tbody>
    <tr>
        <td>@item.Id</td>
        <td>@item.UrunId</td>
        <td>@item.Adet</td>
        <td>@item.Fiyat</td>
        <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
    </tr>
</tbody>
    }
</table>
