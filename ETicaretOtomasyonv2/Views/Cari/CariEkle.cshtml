@model ETicaretOtomasyonv2.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Cari Ekleme Sayfası</h2>
<br />

<form class="form-group" method="post">

    <label for="exampleInputName1">Cari Adı : </label>
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control " })
    <br />
    <label for="exampleInputName1">Cari Soyadı : </label>
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control " })
    <br />
    <label for="exampleInputName1">Cari Ülke : </label>
    @Html.TextBoxFor(x => x.CariUlke, new { @class = "form-control" })
    <br />
    <label for="exampleInputName1">Cari Sehir : </label>
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control " })
    <br />
    <label for="exampleInputName1">Cari Mail : </label>
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control " })
    <br />
    <label for="exampleInputName1">Cari Durum : </label>
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Kaydet</button>
</form>
