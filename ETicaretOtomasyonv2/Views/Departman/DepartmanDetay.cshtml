@using ETicaretOtomasyonv2.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detay</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<br />

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var x in Model) {
    <tr>
        <td>@x.DepartmanID</td>
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
        <td>@x.PersonelGorsel</td>
        <td>  <a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-default" style="background-color:orangered">Satışlar</a>  </td>
    </tr>  
    }
</table>